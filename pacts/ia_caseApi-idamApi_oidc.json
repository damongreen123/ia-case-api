{
  "provider": {
    "name": "idamApi_oidc"
  },
  "consumer": {
    "name": "ia_caseApi"
  },
  "interactions": [
    {
      "description": "Provider receives a POST /o/token request from an IA API",
      "request": {
        "method": "POST",
        "path": "/o/token",
        "headers": {
          "Content-Type": "application/x-www-form-urlencoded"
        },
        "body": "redirect_uri=http%3A%2F%2Fwww.dummy-pact-service.com%2Fcallback&client_id=pact&grant_type=password&username=ia-caseofficer@fake.hmcts.net&password=London01&client_secret=pactsecret&scope=openid profile roles"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "access_token": "eyJ0eXAiOiJKV1QiLCJraWQiOiJiL082T3ZWdjEre",
          "scope": "openid roles profile"
        },
        "matchingRules": {
          "body": {
            "$.access_token": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$.scope": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            }
          }
        }
      },
      "providerStates": [
        {
          "name": "a token is requested"
        }
      ]
    },
    {
      "description": "A request for a UserInfo",
      "request": {
        "method": "GET",
        "path": "/o/userinfo",
        "headers": {
          "Authorization": "Bearer someAuthorizationToken",
          "Content-Type": "application/json"
        },
        "matchingRules": {
          "header": {
            "Authorization": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "Bearer someAuthorizationToken"
                }
              ],
              "combine": "AND"
            },
            "Content-Type": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "application/json"
                }
              ],
              "combine": "AND"
            }
          }
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json; charset=UTF-8"
        },
        "body": {
          "uid": "1111-2222-3333-4567",
          "sub": "ia-caseofficer@fake.hmcts.net",
          "givenName": "Case",
          "familyName": "Officer",
          "roles": [
            "caseworker-ia-legalrep-solicitor"
          ],
          "IDAM_ADMIN_USER": "string"
        },
        "matchingRules": {
          "body": {
            "$.uid": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$.roles": {
              "matchers": [
                {
                  "match": "type",
                  "min": 1
                }
              ],
              "combine": "AND"
            },
            "$.roles[*]": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$.IDAM_ADMIN_USER": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            }
          },
          "header": {
            "Content-Type": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "application/json(;\\s?charset=[\\w\\-]+)?"
                }
              ],
              "combine": "AND"
            }
          }
        },
        "generators": {
          "body": {
            "$.IDAM_ADMIN_USER": {
              "type": "RandomString",
              "size": 20
            }
          }
        }
      },
      "providerStates": [
        {
          "name": "userinfo is requested"
        }
      ]
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "3.0.0"
    },
    "pact-jvm": {
      "version": "4.1.7"
    }
  }
}
